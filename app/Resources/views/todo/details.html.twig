{% extends 'base.html.twig' %}
{% block body %}
    <br/>
    <br/>
    <br/>
    <a href="/" class="btn btn-default">Back To Todos</a>
    <hr>
    <h2 class="page-header">{{ todo.name }}</h2>
    <ul class="list-group">
        <li class="list-gruop-item">Category: {{ todo.category }}</li>
        <li class="list-gruop-item">Priority: {{ todo.priority }}</li>
        <li class="list-gruop-item">Due: <strong>{{ todo.dueDate| date('F j, Y, g:i a') }}</strong></li>
    </ul>

    <p>
        {{ todo.description }}
    </p>
{% endblock %}